{
  "name": "Bookmark Finder Extension",
  "version": "3.0.3",
  "description": "Bookmark Finder Chrome Extension",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "bookmarks",
    "sidePanel"
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to show an alert"
  },
  "side_panel": {
    "default_path": "sidebarPanel.html"
  }
}
