{
  "branches": ["main", "next"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "*feat*", "release": "minor" },
          { "type": "*fix*", "release": "patch" },
          { "type": "*refactor*", "release": "patch" },
          { "type": "*docs*", "release": "patch" },
          { "type": "*chore*", "release": false },
          { "type": "*remove*", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® feat", "hidden": false },
            { "type": "fix", "section": "üêõ fix", "hidden": false },
            { "type": "refactor", "section": "‚ôªÔ∏è refactor", "hidden": false },
            { "type": "docs", "section": "üìù docs", "hidden": false },
            { "type": "chore", "section": "üì¶ chore", "hidden": true },
            { "type": "remove", "section": "üî• remove", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# üö¶ CHANGELOG"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ]
}
