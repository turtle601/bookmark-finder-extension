{
  "branches": ["main", "next"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "âœ¨ feat", "release": "minor" },
          { "type": "ğŸ› fix", "release": "patch" },
          { "type": "â™»ï¸ refactor", "release": "patch" },
          { "type": "ğŸ“ docs", "release": "patch" },
          { "type": "ğŸ“¦ chore", "release": false },
          { "type": "ğŸ”¥ remove", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ feat", "hidden": false },
            { "type": "fix", "section": "ğŸ› fix", "hidden": false },
            { "type": "refactor", "section": "â™»ï¸ refactor", "hidden": false },
            { "type": "docs", "section": "ğŸ“ docs", "hidden": false },
            { "type": "chore", "section": "ğŸ“¦ chore", "hidden": true },
            { "type": "remove", "section": "ğŸ”¥ remove", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# ğŸš¦ CHANGELOG"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ]
}
